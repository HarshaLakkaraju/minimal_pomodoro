{
  "name": "floating-pomodoro-timer",
  "version": "1.0.1",
  "description": "A minimal floating Pomodoro timer with rounded corners",
  "main": "main.js",
  "author": "Harsha Lakkaraju",
  "repository": {
    "type": "git",
    "url": "https://github.com/HarshaLakkaraju/minimal_pomodoro"
  },
  "scripts": {
    "start": "electron .",
    "build": "electron-builder",
    "build-installer": "electron-builder --win nsis",
    "build-portable": "electron-builder --win portable",
    "build-all": "npm run build-installer && npm run build-portable",
    "release": "electron-builder --win nsis --publish=always",
    "publish": "electron-builder --publish=always"
  },
  "build": {
    "appId": "com.yourname.pomodoro-timer",
    "productName": "Pomodoro Timer",
    "directories": {
      "output": "dist"
    },
    "files": [
      "main.js",
      "timer.js",
      "index.html",
      "style.css",
      "assets/**/*",
      "sounds/**/*",
      "!**/*.psd",
      "!**/*.ai"
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "assets/icon.ico",
      "publisherName": "Harsha Lakkaraju"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "Pomodoro Timer",
      "menuCategory": "Productivity Tools"
     
    },
    "publish": {
      "provider": "github",
      "owner": "HarshaLakkaraju",
      "repo": "minimal_pomodoro"
    }
  },
  "devDependencies": {
    "electron": "^29.0.0",
    "electron-builder": "^24.13.3",
    "electron-updater": "^6.6.2"
  }
}
